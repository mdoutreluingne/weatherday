<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.weatherday" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>WeatherDay</name>
    <description>
        Retrouvez la qualité des prévisions météo de Openweathermap sur votre application, pour toutes les communes de métropole, d'outre-mer et dans le monde. Des prévisions en direct avec géolocalisation et pluie dans l’heure.
    </description>
    <author email="maxime.doutreluingne@sfr.fr">
        WeatherDay Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
